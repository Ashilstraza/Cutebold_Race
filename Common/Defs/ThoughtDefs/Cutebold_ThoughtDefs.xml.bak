	<!-- Traits -->
	<ThoughtDef>
		<defName>CuteboldProsthophileNoProsthetic</defName>
		<workerClass>ThoughtWorker_HasAddedBodyPart</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<invert>true</invert>
		<requiredTraits>
			<li>Transhumanist</li>
		</requiredTraits>
		<stages>
			<li>
				<label>transhumanist frustrated</label>
				<description>Flesh is so limiting. I wish I had some kind of fake body part.</description>
				<baseMoodEffect>-4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>CuteboldProsthophileHappy</defName>
		<workerClass>ThoughtWorker_HasAddedBodyPart</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<requiredTraits>
			<li>Transhumanist</li>
		</requiredTraits>
		<stages>
			<li>
				<label>transhumanist pleased</label>
				<description>This fake part is cool. I want more.</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
			<li>
				<label>transhumanist quite pleased</label>
				<description>Two fake parts are better than one. I wish I had more.</description>
				<baseMoodEffect>7</baseMoodEffect>
			</li>
			<li>
				<label>transhumanist delighted</label>
				<description>Three fake parts, and my weak cutebold flesh is going away, but I still want more!</description>
				<baseMoodEffect>9</baseMoodEffect>
			</li>
			<li>
				<label>transhumanist enchanted</label>
				<description>Four fake body parts and I am becoming more than a cutebold. But there's still some flesh that needs replacing.</description>
				<baseMoodEffect>11</baseMoodEffect>
			</li>
			<li>
				<label>transhumanist overjoyed</label>
				<description>Five fake body parts! How could a fancy being like me ever feel sad?</description>
				<baseMoodEffect>12</baseMoodEffect>
			</li>
			<li>
				<label>machine body is complete</label>
				<description>I asked for this.</description>
				<baseMoodEffect>13</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
